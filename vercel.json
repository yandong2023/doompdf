{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.ico",
      "use": "@vercel/static"
    },
    {
      "src": "*.png",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/doom.pdf",
      "dest": "/public/doom.pdf"
    },
    {
      "src": "/blog",
      "dest": "/blog.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 