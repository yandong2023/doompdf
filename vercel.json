{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/doom.pdf",
      "dest": "/public/doom.pdf"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 